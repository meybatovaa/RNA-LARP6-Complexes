# prepare RNA system

source leaprc.RNA.OL3
source leaprc.water.opc

# Load the RNA structure 
mol = loadpdb input.pdb

# Solvate in an octahedral OPC water box
solvateOct mol OPCBOX 10.0  # 10 Ã… buffer

# Add counterions
addIonsRand mol Cl- 37  # number may change depending on net charge
addIonsRand mol K+ 0

# Save Amber topology and coordinates
saveamberparm mol coords.prmtop coords.inpcrd
savepdb mol conf.pdb
